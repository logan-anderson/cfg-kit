{
  "name": "cfg-kit",
  "version": "0.0.2",
  "description": "A TypeScript configuration toolkit with automatic type inference",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cfg-kit": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "keywords": ["config", "configuration", "typescript", "type-inference", "build", "toolkit", "schema"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@types/node": "^20.17.10",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "esbuild": "^0.25.6",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "zod": "^3.24.1"
  }
}
